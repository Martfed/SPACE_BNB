<%= simple_form_for([current_user, Spaceship.new]) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.association :country, require: true, input_html: { class: "beautiful-dropdown"}, include_hidden: false %>
  <%= f.input :city %>
  <%= f.input :address %>
  <%= f.input :capacity %>
  <%= f.button :submit %>
<% end %>

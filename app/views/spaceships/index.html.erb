<div class="cards">
  <% @spaceships.each do |spaceship| %>
    <div class="card spaceship-card-small" style="width: 18rem;">
      <%= cl_image_tag spaceship.image %>
      <div class="card-body">
        <h5 class="card-title"><%= spaceship.name %></h5>
        <p class="card-text"><%= spaceship.description %></p>
        <p class="card-text price"><%= spaceship.price %>/d</p>
      </div>
    </div>
  <% end %>
</div>


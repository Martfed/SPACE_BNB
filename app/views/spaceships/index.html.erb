<div class="container">
  <div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

  <div class="cards">
    <% @spaceships.each do |spaceship| %>
      <%= link_to user_spaceship_path(spaceship.user, spaceship) do %>
        <div class="card spaceship-card-small" style="width: 18rem;">
          <div class="card-img-top" style="background-image: url(<%= cl_image_path spaceship.image, height: 200, crop: :fill %>); background-position: center">
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= spaceship.name %></h5>
            <p class="card-text"><%= spaceship.city %></p>
            <p class="price"><%= spaceship.price %>/d</p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<% if user_signed_in? %>
  <%= link_to "Add a ship", new_user_spaceship_path(current_user), class: "btn btn-main" %>
<!--    render "form" %> -->
<% end %>
